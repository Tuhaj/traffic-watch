{{ time-series-chart
  barData=timeSeriesBarContent
  lineData=weekContent
  selectedInterval='D'
}}

<div class="hour-slider">
  {{ input-range min="0" max="24" step="1" value=xPosition }}
  <span class="help-block">Current hour: {{xPosition}}</span>
</div>

<div class='day-buttons'>
  <div class='btn btn-default' {{action "setDay" "Mon" on="click"}} > Mon </div>
  <div class='btn btn-default' {{action "setDay" "Tue" on="click"}} > Tue </div>
  <div class='btn btn-default' {{action "setDay" "Wed" on="click"}} > Wed </div>
  <div class='btn btn-default' {{action "setDay" "Thu" on="click"}} > Thu </div>
  <div class='btn btn-default' {{action "setDay" "Fri" on="click"}} > Fri </div>
  <div class='btn btn-default' {{action "setDay" "Sat" on="click"}} > Sat </div>
  <div class='btn btn-default' {{action "setDay" "Sun" on="click"}} > Sun </div>
</div>



{{view "select" class='city-selection' content=names value=currentCity}}
